<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:visibility="visible"
                app:srcCompat="@drawable/officelogo" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/skodaprobold"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="3dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textNoSuggestions"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:textColorHint="@color/skoda_hint" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="@font/skodaprobold"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:textColorHint="@color/skoda_hint" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="Login"
                android:fontFamily="@font/skodaprobold"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appCompatTextView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Powered By"
                android:fontFamily="@font/skodaprobold"
                android:textAlignment="center"
                android:textColor="#F70A0A0A"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/logoimg_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/versiontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:fontFamily="@font/skodaprobold"
                android:text="Volkswagen Aug app v 2.0.0"
                android:textAlignment="center"
                android:textColor="#003c65" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>




