<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCp8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan PIN Number"
                android:textSize="14sp"
                android:fontFamily="@font/skodaprobold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <EditText
                android:id="@+id/textviewCp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Scan Pin Number"
                android:fontFamily="@font/skodaprobold"
                android:textColorHint="@color/skoda_hint"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:text="Back" />


            <Button
                android:id="@+id/buttonCp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:text="Next" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dbContentValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRFIDID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag ID"
                android:fontFamily="@font/skodaprobold" />

            <TextView
                android:id="@+id/RFIDValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/skodaprobold"
                android:text="NA" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="PIN Number"
                android:fontFamily="@font/skodaprobold" />

            <TextView
                android:id="@+id/pinNumberValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:fontFamily="@font/skodaprobold"/>

<!--            <TextView-->
<!--                android:id="@+id/textView11"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:text="VIN Number"-->
<!--                android:textStyle="bold" />-->

<!--            <TextView-->
<!--                android:id="@+id/vinNumberValue"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="TextView" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/skodaprobold"
                    android:text="Reader Status" />

                <TextView
                    android:id="@+id/rfidReaderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/skodaprobold"
                    android:text="NA" />
            </LinearLayout>

            <Button
                android:id="@+id/readTagAndCompare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#4BA82E"
                android:fontFamily="@font/skodaprobold"
                android:text="Read Tag and Compare"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tagPinNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/skodaprobold"
                android:text="NA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/compareResultViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Result"
                    android:fontFamily="@font/skodaprobold" />

                <TextView
                    android:id="@+id/compareResultView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NA"
                    android:fontFamily="@font/skodaprobold"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:theme="@style/BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/skoda_green"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bnv_tab_item_foreground"
        app:itemTextColor="@color/bnv_tab_item_foreground"
        android:fitsSystemWindows="true"
        app:labelVisibilityMode="labeled"
        android:fontFamily="@font/skodaprobold"
        app:menu="@menu/bottom_navigation">
    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>